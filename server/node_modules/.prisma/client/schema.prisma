generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Client {
  id          String   @id @default(uuid())
  name        String
  whatsapp    String?
  cpf         String?  @unique
  rg          String?
  address     String?
  motherName  String?
  pix         String?
  bank        String?
  observation String?
  rating      Int      @default(5)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  loans       Loan[]
}

model Loan {
  id           String        @id @default(uuid())
  clientId     String
  client       Client        @relation(fields: [clientId], references: [id])
  amount       Decimal
  interestRate Decimal
  totalAmount  Decimal
  startDate    DateTime
  status       String        @default("ACTIVE") // ACTIVE, PAID, DEFAULTED
  installments Installment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Installment {
  id         String    @id @default(uuid())
  loanId     String
  loan       Loan      @relation(fields: [loanId], references: [id])
  number     Int
  dueDate    DateTime
  amount     Decimal
  status     String    @default("PENDING") // PENDING, PAID, PARTIAL, LATE
  paidAmount Decimal   @default(0)
  paidDate   DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Transaction {
  id          String   @id @default(uuid())
  type        String // IN, OUT
  description String
  amount      Decimal
  date        DateTime @default(now())
  category    String?
  createdAt   DateTime @default(now())
}

model User {
  id       String  @id @default(uuid())
  username String  @unique
  password String
  name     String?
}
