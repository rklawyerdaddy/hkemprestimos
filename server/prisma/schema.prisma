generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  username     String        @unique
  password     String
  name         String?
  clients      Client[]
  transactions Transaction[]
  partners     Partner[]
  role         String        @default("USER") // USER, ADMIN
  active       Boolean       @default(true)
  planId       String?
  plan         Plan?         @relation(fields: [planId], references: [id])
  subscription Subscription?
  createdAt    DateTime      @default(now())
}

model Plan {
  id            String         @id @default(uuid())
  name          String
  price         Decimal
  description   String?
  features      String?
  maxClients    Int            @default(100)
  maxLoans      Int            @default(100)
  users         User[]
  subscriptions Subscription[]
  createdAt     DateTime       @default(now())
}

model Subscription {
  id               String    @id @default(uuid())
  userId           String    @unique
  user             User      @relation(fields: [userId], references: [id])
  planId           String
  plan             Plan      @relation(fields: [planId], references: [id])
  status           String    @default("ACTIVE") // ACTIVE, CANCELED, PAST_DUE
  gateway          String?   // STRIPE, ASAAS, MERCADOPAGO
  gatewayId        String?   // ID na plataforma de pagamento
  currentPeriodEnd DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  payments         Payment[]
}

model Payment {
  id             String       @id @default(uuid())
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])
  amount         Decimal
  status         String       // PENDING, PAID, FAILED
  gatewayId      String?
  createdAt      DateTime     @default(now())
}

model Client {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  name        String
  whatsapp    String?
  cpf         String?
  rg          String?
  address     String?
  motherName  String?
  pix         String?
  bank        String?
  observation String?
  group       String?  // Categoria/Pasta para organização
  rating      Int      @default(5)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  loans       Loan[]
  documents   ClientDocument[]

  @@unique([userId, cpf]) // CPF único apenas dentro da conta do mesmo usuário
}

model ClientDocument {
  id        String   @id @default(uuid())
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  name      String
  url       String
  type      String?
  createdAt DateTime @default(now())
}

model Partner {
  id             String   @id @default(uuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  name           String
  pixKey         String?
  commissionRate Decimal  @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  loans          Loan[]
}

model Loan {
  id             String        @id @default(uuid())
  clientId       String
  client         Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  partnerId      String?
  partner        Partner?      @relation(fields: [partnerId], references: [id])
  amount         Decimal
  interestRate   Decimal
  totalAmount    Decimal
  startDate      DateTime
  status         String        @default("ACTIVE") // ACTIVE, PAID, DEFAULTED, RENEGOTIATED
  originalLoanId String?       // Para renegociação
  originalLoan   Loan?         @relation("Renegotiation", fields: [originalLoanId], references: [id])
  renegotiatedTo Loan[]        @relation("Renegotiation")
  installments   Installment[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Installment {
  id         String    @id @default(uuid())
  loanId     String
  loan       Loan      @relation(fields: [loanId], references: [id], onDelete: Cascade)
  number     Int
  dueDate    DateTime
  amount     Decimal
  status     String    @default("PENDING")
  paidAmount Decimal   @default(0)
  paidDate   DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Transaction {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  type        String   // IN, OUT
  description String
  amount      Decimal
  date        DateTime @default(now())
  category    String?
  createdAt   DateTime @default(now())
}
